{% extends 'base.html.twig' %}

{% block title %}LemonIntApp{% endblock %}

{% block body %}
    <h1>Liste des événements</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Horaires</th>
                <th>Titre</th>
                <th>Inscription</th>
            </tr>
        </thead>
        <tbody>
            {% for event in events %}
                <tr>
                    <td>{{ event.beginAt|date('Y-m-d') }}</td>
                    <td>{{ event.beginAt|date('H:i') }} - {{ event.endAt|date('H:i') }}</td>
                    <td>{{ event.title }}</td>
                    <td>
                        <a href="/eventattendee/register/{{ event.id}}" class="btn btn-primary">
                            S'inscrire
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
