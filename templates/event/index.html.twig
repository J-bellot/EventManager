{% extends 'base.html.twig' %}

{% block title %}LemonIntApp{% endblock %}

{% block body %}
    <h1>Liste des événements</h1>
    {% if filterForm is defined %}
        {{ form_start(filterForm) }}
        {{ form_widget(filterForm.startDate) }}
        {{ form_widget(filterForm.endDate) }}
        {{ form_widget(filterForm.filter) }}
        {{ form_end(filterForm) }}
    {% endif %}
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Horaires</th>
                <th>Titre</th>
                {% if myevents is defined and myevents == true %}
                    <th>Modifer</th>
                    <th>Supprimer</th>
                {% else %}
                    <th>Inscription</th>
                {% endif %}
                

            </tr>
        </thead>
        <tbody>
            {% for event in events %}
                <tr>
                    <td>{{ event.beginAt|date('Y-m-d') }}</td>
                    <td>{{ event.beginAt|date('H:i') }} - {{ event.endAt|date('H:i') }}</td>
                    <td>{{ event.title }}</td>
                    {% if myevents is defined and myevents == true %}
                        <td>
                            <a href="/edit-event/{{ event.id }}" class="btn btn-info">
                                Modifier
                            </a>
                        </td>
                        <td>
                            <a href="/delete-event/{{ event.id }}" class="btn btn-danger">
                                Supprimer
                            </a>
                        </td>
                    {% else %}
                        <td>
                        {% set isUserRegistered = app.user and event.eventAttendees.contains(app.user) %}
                        {% if app.user %}
                            {% for attendee in event.eventAttendees %}
                                {% if attendee.user[0] == app.user %}
                                    {% set isUserRegistered = true %}
                                {% endif %}
                            {% endfor %}
                        {% endif %}
                        {% if isUserRegistered %}
                            <a href="{{ path('unregister_for_event', {'event_id': event.id}) }}" class="btn btn-danger">
                                Se désinscrire
                            </a>
                        {% else %}
                            <a href="{{ path('register_for_event', {'event_id': event.id}) }}" class="btn btn-primary {% if not app.user %}
                                disabled
                            {% endif %}" >
                                S'inscrire
                            </a>
                        {% endif %}
                    </td>
                    {% endif %}
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
